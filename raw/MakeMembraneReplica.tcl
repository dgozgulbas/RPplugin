    $console.log column num -width 30 -stretch 0 -anchor w
    $console.log column msg -width 100 -stretch 1 -anchor w
    $console.log column time -width 80 -stretch 0 -anchor e
    ttk::scrollbar $console.scroll -orient vertical -command "$f.console.log yview"
    
    grid $console -column 0 -row 1 -sticky nswe -padx 15 -pady "5 0"
    grid columnconfigure $console 0 -weight 1
    grid $console.log -column 0 -row 0 -sticky nswe
    grid $console.scroll -column 1 -row 0 -sticky nswe
    
    pack $f.console -side top -padx 2 -pady 6 -fill both -expand 0
    
    
    return $w
}

