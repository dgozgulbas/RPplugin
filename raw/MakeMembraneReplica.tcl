proc ::MembraneMixerPackage::SanityCheck {} {
       # Set variables in current namespace
        set psf  $::MembraneMixerPackage::psffile
        set pdb  $::MembraneMixerPackage::pdbfile
        set conf $::MembraneMixerPackage::conffile
        set MembSelection $::MembraneMixerPackage::lselection
        set restrGroupSelect $::MembraneMixerPackage::restrainedselection
        set custom_conffile $::MembraneMixerPackage::custom_conffile
        set namdcommand $::MembraneMixerPackage::namdcommand
        set namdcommandOpt $::MembraneMixerPackage::namdcommandOpt
        set restrainedbilayer $::MembraneMixerPackage::restrainedbilayer
        set forceconstbilayer $::MembraneMixerPackage::forceconstbilayer
        set restrained $::MembraneMixerPackage::restrained
        set forceconst $::MembraneMixerPackage::forceconst
        set exchange $::MembraneMixerPackage::exchange
        set nreplicas $::MembraneMixerPackage::nreplicas
        set num_min1 $::MembraneMixerPackage::num_min1
        set num_md1 $::MembraneMixerPackage::num_md1
        set num_min2 $::MembraneMixerPackage::num_min2
        set num_md2 $::MembraneMixerPackage::num_md2
        set ExProc $::MembraneMixerPackage::ExProc
        set outputpath $::MembraneMixerPackage::outputpath
	variable ::MembraneMixerPackage::ChangeFreqOut 0

	# Checking initial settings and files
        ::MembraneMixerPackage::UpdateStatusText "Checking..."
        ::MembraneMixerPackage::consoleMessage "Check settings and files"
        foreach f [list $psf $pdb $namdcommand $exchange $nreplicas $MembSelection $num_min1 $num_md1 $num_min2 $num_md2 $outputpath] tag [list "PSF file" "PDB file" "NAMD path" "Lipid exchange" "Number of replica" "Lipid selection" "Min. steps (first eq.)" "MD. steps (first eq.)" "Min. steps (second eq.)" "MD. steps (second eq.)" "Output path"] {
            if {[string trim $f] eq ""} {
                ::MembraneMixerPackage::ErrorMessCheck "Error: \"$tag\" variable is empty!"
            }
        }
        if {$restrainedbilayer} {
            if {[string trim $forceconstbilayer] eq ""} {
                ::MembraneMixerPackage::ErrorMessCheck "Error: \"Force constant (bilayer)\" variable is empty!"
            }
            if {$forceconstbilayer <= 0} {::MembraneMixerPackage::ErrorMessCheck "Error: force constant for phosphate-phospate distance colvar must be higher than 0!"}
            if {![string is double $forceconstbilayer]} {::MembraneMixerPackage::ErrorMessCheck "Error: force constant for phosphate-phospate distance colvar is not a floating-point value!"}
        }
        if {$restrained} {
            foreach f [list $forceconst $restrGroupSelect] tag [list "Force constant (group)" "Group selection"] {
                if {[string trim $f] eq ""} {
                    ::MembraneMixerPackage::ErrorMessCheck "Error: \"$tag\" variable is empty!"
                }
            }
            if {$forceconst <= 0} {::MembraneMixerPackage::ErrorMessCheck "Error: force constant for group restrain must be higher than 0!"}
            if {![string is double $forceconst]} {::MembraneMixerPackage::ErrorMessCheck "Error: force constant for group restrain is not a floating-point value!"}
        }

        foreach f [list $psf $pdb] tag [list "PSF file" "PDB file"] {
            if {[file exists $f] == 0} {
                    ::MembraneMixerPackage::ErrorMessCheck "Error: \"$tag\" does not exist!"
            }
        }

        foreach f [list $nreplicas $num_min1 $num_md1 $num_min2 $num_md2] tag [list "Number of replica" "Min. steps (first eq.)" "MD. steps (first eq.)" "Min. steps (second eq.)" "MD. steps (second eq.)"] {
            if {![string is integer [string trim $f]] || $f < 0} {
                ::MembraneMixerPackage::ErrorMessCheck "Error: \"$tag\" is not a positive integer!"
            }
        }
        if {$exchange > 100 || $exchange <= 0} {::MembraneMixerPackage::ErrorMessCheck "Error: lipid exchange percentage must be higher than 0% and lower than 100%!"}
        if {$nreplicas <= 0 || ![string is integer $nreplicas]} {::MembraneMixerPackage::ErrorMessCheck "Error: specify a valid number for number of replica to generate (\"Numer of replicas\" variable)"}
        if {$custom_conffile} {
            if {[string trim $conf] eq "" || [file exists $conf] == 0} {
                ::MembraneMixerPackage::ErrorMessCheck "Error: configuration file variable is empty or the file does not exist!"
            }
            # Check if minimization or MD steps are multiple of restart and dcd output frequency 
            set grep1 [lindex [::MembraneMixerPackage::GrepEmu "restartfreq" $conf 1] 0]
            set grep2 [lindex [::MembraneMixerPackage::GrepEmu "dcdfreq" $conf 1] 0]
            if {[lindex $grep1 0] == "" || [lindex $grep1 1] == "" } {::MembraneMixerPackage::ErrorMessCheck "Conf file does not contain \"restartfreq\" keyword, which is needed in the simulation!"}
            if {[lindex $grep2 0] == "" || [lindex $grep2 1] == "" } {::MembraneMixerPackage::ErrorMessCheck "Conf file does not contain \"dcdfreq\" keyword, which is needed in the simulation!"}
            set confrest [string trim [lindex $grep1 1] ";"]
            set confdcd [string trim [lindex $grep2 1] ";"]
            foreach v [list $confrest $confdcd] t1 [list "\"restartfreq\" in conf file" "\"dcdfreq\" in conf file"] {
                foreach e [list $num_min1 $num_md1 $num_min2 $num_md2] t2 [list "minsteps1" "runsteps1" "minsteps2" "runsteps2"] {
                    if {$v>$e} { 
                        #::MembraneMixerPackage::ErrorMessCheck "Frequency for $t1 is higher than \"$t2\" variable set in this script!"
			set listmp [concat $num_min1 $num_md1 $num_min2 $num_md2]
			set ::MembraneMixerPackage::ChangeFreqOut [expr int([tcl::mathfunc::min {*}$listmp]/2)]
                        puts "Output frequency $t1 is higher than \"$t2\" variable. Setting all output frequency to $::MembraneMixerPackage::ChangeFreqOut!"
                    }
                    if {[expr int([expr {fmod($e,$v)}])]} {
                        #::MembraneMixerPackage::ErrorMessCheck "\"$t2\" variable must be a multiple of frequency for $t1!"
			set listmp [concat $num_min1 $num_md1 $num_min2 $num_md2]
			set ::MembraneMixerPackage::ChangeFreqOut [expr int([tcl::mathfunc::min {*}$listmp]/2)]
                        puts "Variable \"$t2\" is not a multiple of output frequency $t1. Setting all output frequencies to $::MembraneMixerPackage::ChangeFreqOut!"
                    }
                }
            }
        }
        # Check if membrane selection is empty
        mol new $psf
        mol addfile $pdb
        set IDi [molinfo top]
        if {![[atomselect $IDi "$MembSelection"] num]} {
            ::MembraneMixerPackage::ErrorMessCheck "No atoms found for \"$MembSelection\"! \nCannot continue without a valid \nmembrane selection."
        }
        # Get total amount of lipids in each leaflet and check if there are at least two resid per leaflet
        set listmp [::MembraneMixerPackage::GetLeafLipids $IDi $MembSelection]
	if {[llength [lindex $listmp 0]] < 2 || [llength [lindex $listmp 1]] < 2} {
            ::MembraneMixerPackage::ErrorMessCheck "There are less than 2 residue ID in \"$MembSelection\" \nper leaflet! Not enough to exchange."
	}
	# Check if phosphorous exist in selection
        if {$restrainedbilayer && ![[atomselect $IDi "$MembSelection and name P"] num]} {
	    ::MembraneMixerPackage::ErrorMessWarn "No phosphorous atoms in \"$MembSelection\"!"
        }
	# Check if atoms exist in Group selection
        if {$restrained && ![[atomselect $IDi "$restrGroupSelect"] num]} {
            ::MembraneMixerPackage::ErrorMessWarn "No atoms found \"$restrGroupSelect\"!"
        }
        # Check is progress file is already present, overwrite previous simulations?
        set tmpdir [file dirname $outputpath]
        set tmptail [file tail $outputpath]
        set wd_master [file join $tmpdir [regsub {[ ]} $tmptail {} ]]
        variable progressFile [file join $wd_master "MMP.PROGRESS.txt"]
        if {[file exists $progressFile]} {
	    ::MembraneMixerPackage::ErrorMessWarn "The progress file exist already! \nIf you continue previous simulations might be overwritten." 
        }
}

